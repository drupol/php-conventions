{
    "name": "drupol/php-conventions",
    "description": "PHP conventions for coding libraries.",
    "license": "MIT",
    "authors": [
        {
            "name": "Pol Dellaiera",
            "email": "pol.dellaiera@protonmail.com"
        }
    ],
    "require": {
        "php": ">= 7",
        "friendsofphp/php-cs-fixer": "^2",
        "jakub-onderka/php-parallel-lint": "^1",
        "localheinz/composer-normalize": "^1",
        "phpro/grumphp": "^0.15",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.11",
        "phpstan/phpstan-deprecation-rules": "^0.11",
        "sensiolabs/security-checker": "^4",
        "squizlabs/php_codesniffer": "^3"
    },
    "suggest": {
        "phpstan/phpstan-strict-rules": "To have a better strongly typed code."
    },
    "autoload": {
        "psr-4": {
            "drupol\\PhpConventions\\": "./src/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
