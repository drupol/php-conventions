{
    "name": "drupol/php-conventions",
    "description": "PHP conventions for coding libraries based on Grumphp.",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Pol Dellaiera",
            "email": "pol.dellaiera@protonmail.com"
        }
    ],
    "require": {
        "php": ">= 7.1.3",
        "drupol/phpcsfixer-configs-php": "^1",
        "jakub-onderka/php-parallel-lint": "^1",
        "localheinz/composer-normalize": "^1",
        "phpro/grumphp": "^0.15",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.11",
        "phpstan/phpstan-deprecation-rules": "^0.11",
        "sensiolabs/security-checker": "^6",
        "squizlabs/php_codesniffer": "^3",
        "symfony/yaml": "^3.4 || ^4.3",
        "wearejust/grumphp-extra-tasks": "^2.2"
    },
    "suggest": {
        "phpstan/phpstan-strict-rules": "PHPStan rules providing extra strict and opinionated code style."
    },
    "autoload": {
        "psr-4": {
            "drupol\\PhpConventions\\": "./src/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
