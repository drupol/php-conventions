{
    "name": "drupol/php-conventions",
    "description": "PHP conventions based on Grumphp tasks.",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Pol Dellaiera",
            "email": "pol.dellaiera@protonmail.com"
        }
    ],
    "require": {
        "php": ">= 7.1.3",
        "drupol/phpcsfixer-configs-php": "^1.0.25",
        "ergebnis/composer-normalize": "^2.5.1",
        "friendsoftwig/twigcs": "^3.2.2",
        "php-parallel-lint/php-parallel-lint": "^1.1.0",
        "phpro/grumphp": "^0.16.2 || ^0.17.2",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.12.23",
        "phpstan/phpstan-deprecation-rules": "^0.12",
        "sensiolabs/security-checker": "^6.0",
        "squizlabs/php_codesniffer": "^3.5.5",
        "symfony/yaml": "^3 || ^4 || ^5",
        "wearejust/grumphp-extra-tasks": "^2.2.1"
    },
    "suggest": {
        "phpstan/phpstan-strict-rules": "PHPStan rules providing extra strict and opinionated code style."
    },
    "autoload": {
        "psr-4": {
            "drupol\\PhpConventions\\": "./src/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
